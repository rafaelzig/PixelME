<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tsinghua.mediatech.rafaelzig.pixelme">

    <uses-feature
            android:name="android.hardware.camera"
            android:required="true"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera2.full"/>
    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@drawable/icon"
            android:supportsRtl="true">
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".camera.CameraActivity"
                android:theme="@style/MaterialTheme"
                android:screenOrientation="portrait"
                android:parentActivityName=".MainActivity">

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity"/>
        </activity>
        <activity
                android:name=".camera.SettingsActivity"
                android:label="@string/activity_name_settings"
                android:parentActivityName=".camera.CameraActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".camera.CameraActivity" />
        </activity>
        <activity android:name=".camera.SingleImageActivity"
                  android:theme="@style/MaterialTheme"
                  android:parentActivityName=".camera.CameraActivity" >

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".camera.CameraActivity"/>
        </activity>
    </application>
</manifest>